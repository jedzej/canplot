{
  "name": "@canplot/react",
  "version": "0.1.21",
  "description": "A high-performance React charting library built on Canvas",
  "author": "jedzej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jedzej/canplot.git"
  },
  "keywords": [
    "react",
    "chart",
    "charts",
    "canvas",
    "visualization",
    "data-visualization",
    "plotting",
    "graphs",
    "line-chart",
    "bar-chart",
    "scatter-plot",
    "time-series"
  ],
  "type": "module",
  "main": "./dist/canplot.cjs",
  "module": "./dist/canplot.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/canplot.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/canplot.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc --project tsconfig.lib.json && vite build --config vite.config.lib.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o ./docs",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "zustand": "^5.0.8",
    "react-merge-refs": "^3.0.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-onboarding": "^10.0.2",
    "@storybook/addon-vitest": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.0.2",
    "globals": "^16.4.0",
    "playwright": "^1.56.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^10.0.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
